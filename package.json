{
  "name": "wabill",
  "version": "1.2.0",
  "description": "WhatsApp API using baileys",
  "main": "index.js",
  "bin": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node index.js",
    "start-dev": "nodemon index.json",
    "build": "pkg .",
		"build-ncc": "ncc build -o build/lib ./index.js && pkg --target node16-win-x64 -o build/wabil.exe ./build/lib/index.js"
  },
  "keywords": [
    "WhatsApp"
  ],
  "author": {
    "name": "Ahmad Farhan Sibghotalloh",
    "email": "afarhansib@gmail.com",
    "url": "https://afarhansib.github.io"
  },
  "license": "ISC",
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.6",
    "baileys": "^6.0.5",
    "express": "^4.17.1",
    "qrcode": "^1.4.4",
    "socket.io": "^4.1.3"
  },
  "pkg": {
    "assets": [
      "client/**/*",
			"node_modules/axios/dist/node/axios.cjs"
    ],
    "targets": [
      "node16-linux-x64",
      "node16-win-x64"
    ],
    "outputPath": "dist"
  },
  "devDependencies": {
    "qrcode-terminal": "^0.12.0"
  }
}
